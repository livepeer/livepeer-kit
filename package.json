{
  "name": "root",
  "scripts": {
    "build": "pnpm build:packages",
    "build:examples": "pnpm run generate-version && pnpm --filter \"example-*\" build",
    "build:packages": "pnpm run generate-version && pnpm --filter \"@livepeer/*\" build",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "clean": "turbo run clean && rimraf node_modules",
    "dev": "pnpm dev:next",
    "dev:next": "dotenv -- turbo dev --filter \"@livepeer/*\" --filter \"example-next\"",
    "generate-version": "tsm generate-version.ts",
    "lint": "pnpm dlx @biomejs/biome lint ./",
    "lint:fix": "pnpm lint --fix",
    "lint:format": "pnpm dlx @biomejs/biome check --apply ./",
    "lint:types": "tsc --noEmit",
    "list-browsers": "pnpx browserslist && pnpx browserslist --coverage",
    "postinstall": "pnpm run generate-version",
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:update": "vitest --update"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/runtime": "^7.23.9",
    "@biomejs/biome": "^1.5.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/node": "20.11.6",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^1.1.3",
    "bunchee": "^4.4.1",
    "c8": "^9.0.0",
    "dotenv-cli": "^7.3.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "regjsgen": "^0.8.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "tsm": "^2.3.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "pnpm lint:fix"
    ],
    "*.{json,md,mdx,yml}": [
      "pnpm lint:format"
    ]
  },
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  }
}
