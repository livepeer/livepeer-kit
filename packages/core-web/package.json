{
  "name": "@livepeer/core-web",
  "description": "Livepeer's vanilla JS library.",
  "license": "MIT",
  "version": "4.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/livepeer-react.git",
    "directory": "packages/core-web"
  },
  "homepage": "https://docs.livepeer.org",
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/es/index.d.mts",
        "default": "./dist/es/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./browser": {
      "import": {
        "types": "./dist/es/browser.d.mts",
        "default": "./dist/es/browser.mjs"
      },
      "require": {
        "types": "./dist/cjs/browser.d.ts",
        "default": "./dist/cjs/browser.js"
      }
    },
    "./broadcast": {
      "import": {
        "types": "./dist/es/broadcast.d.mts",
        "default": "./dist/es/broadcast.mjs"
      },
      "require": {
        "types": "./dist/cjs/broadcast.d.ts",
        "default": "./dist/cjs/broadcast.js"
      }
    },
    "./crypto": {
      "import": {
        "types": "./dist/es/crypto.d.mts",
        "default": "./dist/es/crypto.mjs"
      },
      "require": {
        "types": "./dist/cjs/crypto.d.ts",
        "default": "./dist/cjs/crypto.js"
      }
    },
    "./external": {
      "import": {
        "types": "./dist/es/external.d.mts",
        "default": "./dist/es/external.mjs"
      },
      "require": {
        "types": "./dist/cjs/external.d.ts",
        "default": "./dist/cjs/external.js"
      }
    },
    "./hls": {
      "import": {
        "types": "./dist/es/hls.d.mts",
        "default": "./dist/es/hls.mjs"
      },
      "require": {
        "types": "./dist/cjs/hls.d.ts",
        "default": "./dist/cjs/hls.js"
      }
    },
    "./media": {
      "import": {
        "types": "./dist/es/media.d.mts",
        "default": "./dist/es/media.mjs"
      },
      "require": {
        "types": "./dist/cjs/media.d.ts",
        "default": "./dist/cjs/media.js"
      }
    },
    "./webrtc": {
      "import": {
        "types": "./dist/es/webrtc.d.mts",
        "default": "./dist/es/webrtc.mjs"
      },
      "require": {
        "types": "./dist/cjs/webrtc.d.ts",
        "default": "./dist/cjs/webrtc.js"
      }
    }
  },
  "scripts": {
    "build": "bunchee",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "bunchee --watch",
    "lint": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "@livepeer/core": "workspace:*",
    "hls.js": "^1.5.2",
    "zustand": "^4.5.0"
  },
  "keywords": [
    "livepeer",
    "video",
    "streaming",
    "livestream"
  ]
}
