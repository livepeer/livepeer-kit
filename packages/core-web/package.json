{
  "name": "@livepeer/core-web",
  "description": "Livepeer's vanilla JS library.",
  "license": "MIT",
  "version": "3.1.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/livepeer-react.git",
    "directory": "packages/core-web"
  },
  "homepage": "https://docs.livepeer.org",
  "files": ["dist"],
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/es/index.d.mts",
        "default": "./dist/es/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./browser": {
      "import": {
        "types": "./dist/es/browser.d.mts",
        "default": "./dist/es/browser.mjs"
      },
      "require": {
        "types": "./dist/cjs/browser.d.ts",
        "default": "./dist/cjs/browser.js"
      }
    },
    "./hls": {
      "import": {
        "types": "./dist/es/hls.d.mts",
        "default": "./dist/es/hls.mjs"
      },
      "require": {
        "types": "./dist/cjs/hls.d.ts",
        "default": "./dist/cjs/hls.js"
      }
    },
    "./media": {
      "import": {
        "types": "./dist/es/media.d.mts",
        "default": "./dist/es/media.mjs"
      },
      "require": {
        "types": "./dist/cjs/media.d.ts",
        "default": "./dist/cjs/media.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/es/types.d.mts",
        "default": "./dist/es/types.mjs"
      },
      "require": {
        "types": "./dist/cjs/types.d.ts",
        "default": "./dist/cjs/types.js"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/es/utils.d.mts",
        "default": "./dist/es/utils.mjs"
      },
      "require": {
        "types": "./dist/cjs/utils.d.ts",
        "default": "./dist/cjs/utils.js"
      }
    },
    "./webrtc": {
      "import": {
        "types": "./dist/es/webrtc.d.mts",
        "default": "./dist/es/webrtc.mjs"
      },
      "require": {
        "types": "./dist/cjs/webrtc.d.ts",
        "default": "./dist/cjs/webrtc.js"
      }
    }
  },
  "scripts": {
    "build": "bunchee",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "bunchee --watch"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "@livepeer/core": "workspace:*",
    "core-js": "^3.35.0",
    "hls.js": "^1.5.1",
    "ms": "^3.0.0-canary.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/ms": "^0.7.31",
    "jose": "^5.2.0"
  },
  "keywords": ["livepeer", "video", "streaming", "livestream"]
}
