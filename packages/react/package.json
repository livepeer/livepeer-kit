{
  "name": "@livepeer/react",
  "description": "React components & hooks for web apps built with Livepeer.",
  "license": "MIT",
  "version": "3.1.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/livepeer-react.git",
    "directory": "packages/react"
  },
  "homepage": "https://docs.livepeer.org",
  "files": ["dist"],
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.mts",
        "default": "./dist/es/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./player": {
      "import": {
        "types": "./dist/es/player.d.mts",
        "default": "./dist/es/player.mjs"
      },
      "require": {
        "types": "./dist/cjs/player.d.ts",
        "default": "./dist/cjs/player.js"
      }
    }
  },
  "scripts": {
    "build": "bunchee",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "bunchee --watch"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@livepeer/core-react": "workspace:*",
    "@livepeer/core-web": "workspace:*",
    "@radix-ui/primitive": "^1.0.1",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-compose-refs": "^1.0.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-presence": "^1.0.1",
    "@radix-ui/react-select": "^2.0.0",
    "core-js": "^3.35.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": ["livepeer", "react", "video", "streaming", "livestream"]
}
